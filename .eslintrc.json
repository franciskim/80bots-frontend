{
  "env": {
    "node": true,
    "browser": true,
    "es6": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "off",
      "double"
    ],
    "semi": [
      "error",
      "always"
    ],
    "comma-dangle": 0,
    "react/jsx-uses-vars": 1,
    "react/prop-types": 1,
    "react/display-name": 1,
    "no-unused-vars": 0,
    "no-console": 1,
    "no-unexpected-multiline": 1,
    "no-prototype-builtins": 0
  }
}
